extends ./layout.jade

block content
  h1= title
  div.article
    div.created_at= article.created_at
    br
    div.body= article.body
    br
    - each comment in article.comments
      div.comment
        div.author= comment.author + ':' + comment.comment + '   at ' + comment.created_at
    form(method="post", action="/blog/addComment")
      input(type="hidden", name="_id", value=article._id)
      div
        span Author :
        input(type="text", name="author", id="addCommentAuthor")
      div
        span Comment :
        textarea(name="comment", row=5, id ="addCommentComment")
      div#editArticleSubmit
        input(type="submit", value="Send")
    a(href="/")
      button Back